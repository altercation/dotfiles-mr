[DEFAULT]
git_gc = git gc "$@"
jobs = 5

lib = 
        myusername="es"
        mylaptopname="naptime"
	hostname="$(hostname)"
	whoami="$(whoami)"
	anon() {
		ssh -T git@github.com &>/dev/null
		if [ $? -gt 1 ]; then
			# failed to authenticate, so anon mode
			return 0
		else
			return 1
		fi
	}
	# all dotfiles cloned in similar manner with standard naming convention
	# so we handle this with a function that allows anonymous checkout of
	# the public repos if ssh hasn't been configured with github yet
	dotfile_clone() {
		if anon; then
			vcsh clone https://github.com/altercation/dotfiles-${1}.git ${1}
			vcsh ${1} remote set-url --push origin ssh://git@github.com:altercation/dotfiles-${1}.git
		else
			vcsh clone ssh://git@github.com:altercation/dotfiles-${1}.git ${1}
		fi
	}
	full() {
		test "$whoami" = $myusername && ! anon
	}
	on() {
		for host in $@; do
			if [ "${host%@*}" != "${host#*@}" ]; then
				if [ "$whoami" != "${host%@*}" ]; then
					continue
				fi
				host="${host#*@}"
			fi
			if [ "$hostname" = "$host" ]; then
				return 0
			fi
		done
		return 1
	}
	mylaptop() {
		on ${myusername}@${mylaptopname}
	}

include = cat ~/.mr/active/*
